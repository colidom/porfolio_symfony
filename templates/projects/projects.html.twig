{% extends 'base.html.twig' %} {% block title %}Proyectos - Porfolio Personal{% endblock %} {% block body %}
<main>
    <section class="proyectos py-5">
        <div class="container">
            <h1 class="display-4 text-capitalize fs-1">{{ title }}</h1>
            <hr />
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for project in projects %}
                <div class="col">
                    <div class="card">
                        <div class="card-img-top-container">
                            <img
                                src="{{ project.image }}"
                                class="card-img-top"
                                alt="{{ project.title }}"
                                data-toggle="tooltip"
                                data-placement="bottom"
                                title="{{ project.title }}"
                            />
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ project.title }}</h5>
                            <p class="card-text">{{ project.description }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>

<style>
    .card-img-top-container {
        overflow: hidden;
        position: relative;
        height: 200px; /* Altura de la imagen dentro del card */
    }

    .card-img-top {
        transition: transform 0.5s;
    }
</style>

<script>
    $(document).ready(function () {
        $(".card-img-top").hover(
            function () {
                $(this).css("transform", "scale(1.1)");
            },
            function () {
                $(this).css("transform", "scale(1)");
            }
        );
    });
</script>
{% endblock %}
