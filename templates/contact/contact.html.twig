{% extends 'base.html.twig' %} {% block title %}Contacto - Porfolio Personal{% endblock %} {% block body %}
<main>
    <section class="contacto py-5">
        <div class="container">
            <h2 class="mb-4">Contacto</h2>

            <!-- Información de contacto -->
            <div class="row">
                <div class="col-md-6">
                    <h4>Información de Contacto</h4>
                    <p><strong>Nombre:</strong> Carlos</p>
                    <p><strong>Email:</strong> carlos@email.com</p>
                    <p><strong>Teléfono:</strong> +1234567890</p>
                    <p><strong>Dirección:</strong> Santa Cruz de Tenerife, España</p>
                </div>
                <div class="col-md-6">
                    <!-- Formulario de contacto (si es necesario) -->
                    <h4>Envíame un mensaje</h4>
                    <form>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" required />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required />
                        </div>
                        <div class="mb-3">
                            <label for="mensaje" class="form-label">Mensaje</label>
                            <textarea class="form-control" id="mensaje" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .contacto h2 {
        text-align: center;
        font-size: 2.5em;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .contacto h4 {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .contacto p {
        margin-bottom: 5px;
    }
</style>
{% endblock %}
